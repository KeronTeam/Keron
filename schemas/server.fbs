// server specific items.
namespace keron.server;

table Configuration {
    // Server address. "*" represents any address.
    address:string;
    // Server port.
    port:ushort;
    // Maximum number of clients.
    maxclients:uint;
    // Path to the datastore.
    datastore:string;
    // logging directory
    logs:string;
    // Maximum cores allowed. (0 = auto)
    concurrency:uint;
}

root_type Configuration;
